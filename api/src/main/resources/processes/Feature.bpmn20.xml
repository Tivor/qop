             typeLanguage="http://www.w3.org/2001/XMLSchema"
             expressionLanguage="http://www.w3.org/1999/XPath"
             targetNamespace="http://www.activiti.org/processdef">

    <process id="processFeature">

        <startEvent id="iniciarProcessoFeature"/>

            <sequenceFlow sourceRef="iniciarProcessoFeature" targetRef="criarFeature"/>

            <serviceTask id="criarFeature"
                         name="Incluir Feature"
                         activiti:expression="${FeatureService.create(nomeFeature, descricaoFeature)}"
                         activiti:resultVariable="result"/>

            <sequenceFlow sourceRef="criarFeature" targetRef="avaliarInclusaoFeature"/>

            <userTask id="avaliarInclusaoFeature" name="Avaliar InclusÃ£o de Feature"/>

            <sequenceFlow sourceRef="avaliarInclusaoFeature" targetRef="finalizarProcessoFeature"/>

        <endEvent id="finalizarProcessoFeature"/>

    </process>

</definitions>